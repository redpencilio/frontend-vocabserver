<h1>Vocabularies</h1>
{{#if @model.length}}
  <AddVocab />
  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>UUID</th>
        <th>Remove</th>
        <th>Create download job</th>
      </tr>
    </thead>
    <tbody>
      {{#each @model as |vocab|}}
        <tr>
          <th>
            <LinkTo
              @route='vocabulary'
              @model={{vocab.id}}
            >{{vocab.name}}</LinkTo>
          </th>
          <td>{{vocab.id}}</td>
          <td>
            <BsButton
              @onClick={{(fn this.deleteVocab vocab)}}
            >Remove</BsButton>
          </td>
          <td>
            <BsButton
              {{on 'click' (perform this.createAndRunDownloadJob vocab.url)}}
            >
              {{if this.createAndRunDownloadJob.isRunning '⏳' '⬇️'}}
            </BsButton>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <h4 class='card-header mb-4'>No vocabularies found</h4>
  <AddVocab />
{{/if}}