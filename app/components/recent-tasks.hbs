<table class='table'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody {{did-update (perform this.loadData)  this.job.monitorProgress.performCount}}>
    {{#each this.tasks as |task|}}
      <tr>
        <td>
          {{format-date task.created "dd/MM/yyyy 'at' HH:mm"}}
        </td>
        <td>
          <TaskStatus @task={{task}}/>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>