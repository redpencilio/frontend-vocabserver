<BsModal
  @onSubmit={{this.submit}}
  @renderInPlace={{true}}
  @onHide={{@onClose}}
as |modal|>
  <modal.header>
    <h4 class='modal-title'>
      Add Vocabulary
    </h4>
  </modal.header>
  <modal.body>
    <BsForm
      @formLayout='horizontal'
      @model={{this}}
      @onSubmit={{this.submitVocab}}
      as |form|
    >
      <form.element @controlType='text' @label='URL' @property='url' as |el|>
        <el.control placeholder='URL' required />
      </form.element>
      <form.element @controlType='text' @label='Name' @property='name' as |el|>
        <el.control placeholder='Name' required />
      </form.element>
    </BsForm>
  </modal.body>
  <modal.footer>
    <BsButton @onClick={{modal.close}}>Cancel</BsButton>
    <BsButton @type='success' @onClick={{this.submitVocab}}>Add</BsButton>
  </modal.footer>
</BsModal>