{{#if this.showModal}}
  <BsModal
    @onSubmit={{@onConfirm}}
    @onHidden={{set this 'showModal' false}}
    as |modal|
  >
    <modal.header>{{yield to='message'}}</modal.header>
    <modal.footer>
      <BsButton 
        @onClick={{modal.close}}
      >{{if
          @cancelBtnTxt
          @cancelBtnTxt
          'Cancel'
        }}
        </BsButton>
        <BsButton
          @onClick={{modal.submit}}
          @type={{if @confirmBtnType @confirmBtnType 'primary'}}
        >
          {{if @confirmBtnTxt @confirmBtnTxt 'Confirm'}}
        </BsButton>
    </modal.footer>
  </BsModal>
{{/if}}
<BsButton
  @type={{if @confirmBtnType @confirmBtnType 'primary'}}
  @onClick={{set this 'showModal' true}}
>
  {{yield to='buttonContent'}}
</BsButton>