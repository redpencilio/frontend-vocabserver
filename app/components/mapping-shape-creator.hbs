<BsForm
  {{did-insert this.initializeData}}
  {{did-update this.initializeData @dataset}}
  @formLayout='vertical'
  @model={{this.formModel}}
  @onSubmit={{this.submit}}
  as |form|
>
  <form.element
    @controlType='radio'
    @label='Pivot type'
    @property='pivotType'
    @options={{this.formModel.pivotTypeOptions}}
  />
  <form.element
    @controlType='power-select-multiple'
    @label='Label Path'
    @property='labelPath'
    @options={{this.formModel.labelPathOptions}}
    as |el|
  >
    <el.control
      @searchPlaceholder='Please select a label property'
      @placeholder='Please select a label property'
      @searchEnabled={{true}}
    />
  </form.element>
  <form.submitButton
    disabled={{not (and this.formModel.labelPath this.formModel.pivotType)}}
  >{{#if @nodeShape}}Update{{else}}Submit{{/if}}</form.submitButton>
</BsForm>